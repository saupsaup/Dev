  // ============================================================
  // 👁️ 4. Zobrazenie a hľadanie – podľa .gitignore
  // ============================================================

  // Explorer zobrazí len to, čo nie je v .gitignore
  "explorer.excludeGitIgnore": true,

  // Hľadanie bude rešpektovať .gitignore alebo .ignore súbory
  "search.useIgnoreFiles": true,

  // Voliteľné doplnkové vylúčenia (pre istotu)
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.DS_Store": true,
    "**/.Trash": true,
    "**/Thumbs.db": true
  },

  // Umožní vidieť .vscode aj v prípade, že by ho .gitignore skrýval
  "files.exclude": {
//    "_Nh_Dali_LIB.st": true
  },

  // Rýchlejšie aktualizácie – nepozeraj systémové priečinky
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/.Trash/**": true
  },

  // Prehľadnejšie zobrazenie stromu
  "explorer.compactFolders": false
